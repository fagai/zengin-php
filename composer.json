{
    "name": "fagai/zengin-code",
    "description": "PHP implementation to get ZenginCode.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "3.*",
        "psy/psysh": "^0.10.4"
    },
    "autoload": {
        "psr-4": {
            "Fagai\\ZenginCode\\": "src/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=phpcs.xml ./src",
        "cbf": "phpcbf --standard=phpcs.xml ./src",
        "test": "phpunit"
    }
}
